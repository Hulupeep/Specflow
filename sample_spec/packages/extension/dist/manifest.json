{
  "manifest_version": 3,
  "name": "chat2repo",
  "version": "1.0.0",
  "description": "Save ChatGPT conversations and web selections to your GitHub repository as organized markdown notes with automatic tagging.",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content/chatgptContentScript.js"],
      "css": ["content/styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "chat2repo - Save to GitHub",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "homepage_url": "https://github.com/floutlabs/chat2repo",
  "browser_specific_settings": {
    "gecko": {
      "id": "chat2repo@floutlabs.com"
    }
  }
}
