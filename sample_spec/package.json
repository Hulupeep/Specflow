{
  "name": "chat2repo",
  "version": "1.0.0",
  "private": true,
  "description": "Chrome extension to send ChatGPT/web content to GitHub repos",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:extension",
    "build:core": "npm run build -w packages/core",
    "build:extension": "npm run build -w packages/extension",
    "dev": "npm run dev -w packages/extension",
    "test": "jest",
    "test:contracts": "jest __tests__/contracts.test.js",
    "test:unit": "jest packages/",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.25",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.19.0",
    "jest": "^29.7.0",
    "playwright": "^1.40.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/packages/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/.*/dist/"
    ]
  }
}
